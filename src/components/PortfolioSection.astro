---
// PortfolioSection.astro
---

<section class="py-12 md:py-16 bg-white">
  <div class="container mx-auto px-6 md:px-12 lg:px-16">
    <h3 class="text-base uppercase tracking-wide font-semibold mb-10 text-center text-gray-900">Some of my latest work</h3>
    
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      <!-- Project 1 -->
      <div class="group">
        <a href="/portfolio/ui-design-book" class="block">
          <div class="relative overflow-hidden rounded-md bg-white mb-4 border border-gray-100 shadow-sm">
            <div class="aspect-w-16 aspect-h-10">
              <img 
                src="https://placehold.co/1200x800/f8fafc/64748b?text=UI+Design+Book" 
                alt="UI Design Book" 
                class="object-cover w-full h-full transition-transform duration-500 ease-in-out group-hover:scale-105"
              />
            </div>
          </div>
          <h4 class="text-lg font-medium mb-1 text-gray-900 group-hover:text-gray-600 transition-colors duration-300">My UI design book</h4>
          <p class="text-sm text-gray-500">Book</p>
        </a>
      </div>
      
      <!-- Project 2 -->
      <div class="group">
        <a href="/portfolio/creating-a-lean-design-system" class="block">
          <div class="relative overflow-hidden rounded-md bg-white mb-4 border border-gray-100 shadow-sm">
            <div class="aspect-w-16 aspect-h-10">
              <img 
                src="https://placehold.co/1200x800/f8fafc/64748b?text=Design+System" 
                alt="Design System" 
                class="object-cover w-full h-full transition-transform duration-500 ease-in-out group-hover:scale-105"
              />
            </div>
          </div>
          <h4 class="text-lg font-medium mb-1 text-gray-900 group-hover:text-gray-600 transition-colors duration-300">Creating a lean design system</h4>
          <p class="text-sm text-gray-500">Design system</p>
        </a>
      </div>
      
      <!-- Project 3 -->
      <div class="group">
        <a href="/portfolio/interior-design-news-feed" class="block">
          <div class="relative overflow-hidden rounded-md bg-white mb-4 border border-gray-100 shadow-sm">
            <div class="aspect-w-16 aspect-h-10">
              <img 
                src="https://placehold.co/1200x800/f8fafc/64748b?text=News+Feed" 
                alt="News Feed" 
                class="object-cover w-full h-full transition-transform duration-500 ease-in-out group-hover:scale-105"
              />
            </div>
          </div>
          <h4 class="text-lg font-medium mb-1 text-gray-900 group-hover:text-gray-600 transition-colors duration-300">Interior design news feed</h4>
          <p class="text-sm text-gray-500">Side project</p>
        </a>
      </div>
    </div>
  </div>
</section>

<style>
  /* Fix for aspect ratio in Safari */
  .aspect-w-16.aspect-h-10 {
    position: relative;
    padding-bottom: 62.5%; /* 10/16 = 0.625 */
  }
  
  .aspect-w-16.aspect-h-10 > img {
    position: absolute;
    height: 100%;
    width: 100%;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    object-fit: cover;
  }
</style>
